{% extends 'base.html.twig' %}

{% block body %}
    <h1>Erreur</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ erreur.id }}</td>
            </tr>
            <tr>
                <th>Codeerreur</th>
                <td>{{ erreur.codeErreur }}</td>
            </tr>
            <tr>
                <th>Dateerreur</th>
                <td>{% if erreur.dateErreur %}{{ erreur.dateErreur|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('erreur_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('erreur_edit', { 'id': erreur.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
