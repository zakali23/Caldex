{% extends 'base.html.twig' %}

{% block body %}
    <h1>Piece</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ piece.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ piece.nom }}</td>
            </tr>
            <tr>
                <th>Surface</th>
                <td>{{ piece.surface }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ piece.photo }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('piece_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('piece_edit', { 'id': piece.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
