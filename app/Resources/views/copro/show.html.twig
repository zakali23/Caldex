{% extends "admin/base_admin.html.twig"%}
{% block body %}
    <h1>Copro</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ coPro.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ coPro.name }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ coPro.adresse }}</td>
            </tr>
            <tr>
                <th>Codepostal</th>
                <td>{{ coPro.codePostal }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ coPro.ville }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('copro_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('copro_edit', { 'id': coPro.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
